{
  "manifest_version": 3,
  "name": "Noty",
  "version": "1.0.0",
  "description": "Create, edit, and manage sticky notes directly from your browser",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Noty",
    "default_icon": {
      "16": "icons/quill-pen.png",
      "48": "icons/quill-pen.png",
      "128": "icons/quill-pen.png"
    }
  },
  "icons": {
    "16": "icons/quill-pen.png",
    "48": "icons/quill-pen.png",
    "128": "icons/quill-pen.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
